NODE_ENV=development
PORT=8000
CORS_ORIGIN=http://localhost:5173

# --- Feature Flags ---
# Set to true to enable the Farming Tips feature, including all related expert endpoints.
FEATURE_TIPS_ENABLED=false

# --- MongoDB Configuration ---
MONGODB_URI=

# --- JWT Configuration ---
JWT_SECRET=**********************
JWT_EXPIRY=24h

# --- Farming Expert Secret Key ---
# A shared secret required for a new expert to register via the API.
EXPERT_REGISTRATION_SECRET_KEY=a-very-secret-key-for-experts

# --- Email Configuration (for other features) ---
EMAIL_USER=**********************
EMAIL_PASS=**********************

# --- Twilio SMS Configuration (MANDATORY) ---
SMS_COUNTRY_CODE=+91
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+15017122661